{
  "name": "eslint-config-ferfalk",
  "version": "0.1.0",
  "description": "Shared ESLint config",
  "keywords": [
    "eslint",
    "eslint-config",
    "eslintconfig"
  ],
  "homepage": "https://github.com/Ferfalk/eslint-config-ferfalk#readme",
  "bugs": {
    "url": "https://github.com/Ferfalk/eslint-config-ferfalk/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ferfalk/eslint-config-ferfalk.git"
  },
  "license": "MIT",
  "author": "Fernando A. H. Falkiewicz <fernandoahf@gmail.com>",
  "type": "commonjs",
  "main": "index.js",
  "files": [
    "index.js",
    "typescript.js",
    "jest.js",
    "lint-staged-javascript.js",
    "lint-staged-typescript.js"
  ],
  "scripts": {
    "build": "tsc",
    "commit": "git-cz",
    "lint": "eslint .",
    "lint-staged": "lint-staged",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install",
    "version": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s && git add CHANGELOG.md"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.2",
    "@commitlint/config-conventional": "^18.4.2",
    "@commitlint/cz-commitlint": "^18.4.2",
    "@stylistic/eslint-plugin": "^1.4.0",
    "@stylistic/eslint-plugin-migrate": "^1.4.0",
    "@types/eslint": "^8.44.7",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "commitizen": "^4.3.0",
    "conventional-changelog-cli": "^4.1.0",
    "eslint": "^8.54.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-rxjs": "^5.0.3",
    "eslint-plugin-sonarjs": "^0.23.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
